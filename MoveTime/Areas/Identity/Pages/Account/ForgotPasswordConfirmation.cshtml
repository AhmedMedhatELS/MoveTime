@page
@model ForgotPasswordConfirmation

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "تأكيد استعادة كلمة المرور";
}

<div class="container mt-5" dir="rtl" lang="ar">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4 text-center">
                <div class="mb-4">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" style="text-decoration:none">
                        <img src="~/favicon.png" alt="رمز حجز الفنادق" class="img-fluid mb-3" width="50">
                    </a>
                </div>
                <h2 class="mb-4">@ViewData["Title"]</h2>
                <p class="mb-3">
                    يرجى التحقق من بريدك الإلكتروني لإعادة تعيين كلمة المرور.
                </p>
            </div>
        </div>
    </div>
</div>
