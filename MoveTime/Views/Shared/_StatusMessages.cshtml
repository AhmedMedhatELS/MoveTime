@{
    var errorsList = (TempData["ErrorMessage"] as string)?.Split("-");
}

    <!-- Status Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert">
            <span class="me-auto">@TempData["SuccessMessage"]</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["CheckInSuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert">
        <span class="me-auto">@TempData["CheckInSuccessMessage"]  <button type="button" id="printButton" class="btn alert-light">طباعة التذكرة</button></span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (errorsList != null)
    {
        foreach (var error in errorsList)
        {
            <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert">
                <span class="me-auto">@error</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    }
