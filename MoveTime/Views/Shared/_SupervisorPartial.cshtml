                            <a asp-area="Admin" asp-controller="Shift" asp-action="ShowPrices">
                                <i class="bi bi-list"></i> <!-- Icon for document -->
                                قائمة الأسعار
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="sidebar-item has-sub @(currentController == "Subscription" ? "active" : "" )">
                    <a href="#" class='sidebar-link'>
                        <i class="bi bi-card-list"></i> <!-- Updated icon for subscriptions -->
                        <span>الاشتراكات</span>
                    </a>
                    <ul class="submenu">                       
                        <li class="submenu-item @(currentController == "Subscription" && currentAction == "ViewSubscription" ? "active" : "" )">
                            <a asp-area="Admin" asp-controller="Subscription" asp-action="ViewSubscriptions">
                                <i class="bi bi-eye"></i> <!-- Icon for viewing subscriptions -->
                                عرض الاشتراكات
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="sidebar-item has-sub @(currentController == "Child" ? "active" : "" )">
                    <a href="#" class='sidebar-link'>
                        <i class="bi bi-person-lines-fill"></i> <!-- Icon for children -->
                        <span>الاطفال</span>
                    </a>
                    <ul class="submenu">
                        <li class="submenu-item @(currentController == "Child" && currentAction == "NewChild" ? "active" : "" )">
                            <a asp-area="Admin" asp-controller="Child" asp-action="NewChild">
                                <i class="bi bi-person-plus-fill"></i> <!-- Icon for adding a new child -->
                                طفل جديد
                            </a>
                        </li>
                        <li class="submenu-item @(currentController == "Child" && currentAction == "WhichChild" ? "active" : "" )">
                            <a asp-area="Admin" asp-controller="Child" asp-action="WhichChild">
                                <i class="bi bi-credit-card-fill"></i> <!-- Icon for subscription (credit card) -->
                                اشتراك الطفل في خطة
                            </a>
                        </li>
                        <li class="submenu-item @(currentController == "Child" && currentAction == "WhichChildFile" ? "active" : "" )">
                            <a asp-area="Admin" asp-controller="Child" asp-action="WhichChildFile">
                                <i class="bi bi-person-circle"></i> <!-- Icon for child (person) -->
                                ملف الطفل
                            </a>
                        </li>
                    </ul>
                </li>
               
                <li class="sidebar-item has-sub @(currentController == "Dashboard" && currentAction == "AddEditDocument" ? "active" : "" )">
                    <a href="#" class='sidebar-link'>
                        <i class="bi bi-file-earmark"></i> <!-- Changed to a file icon -->
                        <span>الملفات</span>
                    </a>
                    <ul class="submenu">                      
                        <li class="submenu-item">                           
                            <a id="DocDownLoad" href="javascript:void(0)" download>
                                <i class="bi bi-cloud-download"></i> <!-- Changed to upload icon -->
                                تحميل أخلاء الطرف
                            </a>
                        </li>
                    </ul>
                </li>      

            </ul>
        </div>
        <button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
    </div>
</div>

<script>
    // Create a connection to the hub
    const connectionrightbar = new signalR.HubConnectionBuilder()
        .withUrl("/docHub")
        .build();

    // Function that the hub can call to broadcast price
    connectionrightbar.on("DocLink", function (link) {
        document.getElementById("DocDownLoad").href = link;
    });

    connectionrightbar.start()
        .then(function () {
            connectionrightbar.invoke("GetDocLink");
        })
        .catch(function (err) {
            console.error("Error while starting connection: " + err);
        });
</script>
